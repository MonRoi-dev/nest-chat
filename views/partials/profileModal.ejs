<div
  class="modal fade"
  id="profileModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true"
>
  <div
    class="modal-dialog modal-dialog-centered"
    role="document"
    style="left: 0"
  >
    <div class="modal-content">
      <div class="modal-header">
        <form class="modal-conten__form" action="#" style="width: 100%">
          <button
            type="button"
            class="modal__btn btn__signin"
            data-toggle="modal"
            data-target="#updateModal"
          >
            Edit
          </button>
        </form>
        <button
          type="button"
          class="modal__btn-close close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">Close</span>
        </button>
      </div>
      <div class="modal-body modal-body__main">
        <div class="modal__img">
          <img
            class="modal__profile-img"
            src="/images/<%= user.image %>"
            alt=""
          />
        </div>

        <div class="modal__info">
          <p style="color: black">
            <span>Username:</span> <br />
            <%= user.username %>
          </p>
          <p style="color: black">
            <span>Email:</span> <br />
            <%= user.email %>
          </p>
        </div>
        <form action="/auth/logout" method="post">
          <button type="submit" class="modal__btn-logout">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-door-open-fill"
              viewBox="0 0 16 16"
            >
              <path
                d="M1.5 15a.5.5 0 0 0 0 1h13a.5.5 0 0 0 0-1H13V2.5A1.5 1.5 0 0 0 11.5 1H11V.5a.5.5 0 0 0-.57-.495l-7 1A.5.5 0 0 0 3 1.5V15zM11 2h.5a.5.5 0 0 1 .5.5V15h-1zm-2.5 8c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1"
              />
            </svg>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

